rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNCIONES AUXILIARES ---
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Lectura segura del rol de admin desde la colección users
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Validación de esquema para Registros
    function isValidRecord() {
      let data = request.resource.data;
      return data.keys().hasAll(['cobrado', 'ingresado', 'diferencia', 'fecha', 'userId', 'type']) &&
             data.cobrado is number &&
             data.ingresado is number &&
             data.diferencia is number &&
             data.userId == request.auth.uid; // Integridad: no puedes crear registros para otro
    }

    // --- REGLAS POR COLECCIÓN ---

    // 1. Usuarios: 
    // - Dueño lee su perfil. Admin lee todo.
    // - Dueño puede actualizar configuración (notificaciones). 
    // - Solo Admin cambia roles/bloqueos.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      
      allow create: if isOwner(userId); // Al login inicial
      
      allow update: if isAdmin() || 
                   (isOwner(userId) && 
                    !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'approved', 'blocked']));
    }

    // 2. Registros Financieros:
    // - Lectura: Dueño o Admin.
    // - Escritura: Dueño (solo crear). Admin (borrar/editar para auditoría).
    match /records/{recordId} {
      allow read: if resource.data.userId == request.auth.uid || isAdmin();
      
      allow create: if isAuthenticated() && isValidRecord();
      
      // En finanzas, los usuarios no deberían borrar historial. Solo Admin corrige.
      allow update, delete: if isAdmin();
    }

    // 3. Notificaciones:
    // - Privadas para cada usuario.
    match /notifications/{notificationId} {
      allow read, update: if resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated(); // Para generar notificaciones locales
    }

    // 4. Logs del Sistema:
    // - Solo Admin lee.
    // - Sistema escribe (simulado como create por auth users para traza de auditoría).
    match /system_logs/{logId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if false; // Logs inmutables (WORM)
    }
  }
}